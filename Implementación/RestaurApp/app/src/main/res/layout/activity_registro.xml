<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    tools:context="upc.edu.pe.restaurapp.IniciarSesionActivity"
    android:background="#ffffff"
    >

    <Button
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:text="Iniciar Sesión"
        android:id="@+id/regBtnIniciarSesion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="@color/colorGrisClaro"
        android:onClick="CambiarIniciarSesion"
        />

    <Button
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:text="Registrarse"
        android:id="@+id/regBtnInacRegist"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:background="@color/restaurapptheme_color"
        />

    <com.andreabaccega.widget.FormEditText
        whatever:testType="personName"
        whatever:testErrorString="Nombre no valido"
        whatever:emptyErrorString="Ingrese su Nombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nombres"
        android:ems="10"
        android:id="@+id/regTextNombre"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/regBtnIniciarSesion"
        android:layout_alignRight="@+id/regBtnInacRegist"
        android:layout_alignEnd="@+id/regBtnInacRegist" />

    <com.andreabaccega.widget.FormEditText
        whatever:testType="personFullName"
        whatever:testErrorString="Apellidos no validos"
        whatever:emptyErrorString="Ingrese sus Apellidos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textPersonName"
        android:hint="Apellidos"
        android:ems="10"
        android:id="@+id/regTextApellido"
        android:layout_below="@+id/regTextNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/regBtnInacRegist"
        android:layout_alignEnd="@+id/regBtnInacRegist" />

    <com.andreabaccega.widget.FormEditText
        whatever:testType="email"
        whatever:testErrorString="Correo no valido"
        whatever:emptyErrorString="Ingrese correo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/regTextEmail"
        android:layout_below="@+id/regTextApellido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/regBtnInacRegist"
        android:layout_alignEnd="@+id/regBtnInacRegist"
        android:hint="Correo" />

    <com.andreabaccega.widget.FormEditText
        whatever:emptyErrorString="Ingrese usuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:ems="10"
        android:id="@+id/regTextUserName"
        android:layout_below="@+id/regTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/regBtnInacRegist"
        android:layout_alignEnd="@+id/regBtnInacRegist" />

    <com.andreabaccega.widget.FormEditText
        whatever:emptyErrorString="Ingrese Contraseña"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regTextPassword"
        android:layout_below="@+id/regTextUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Contraseña"
        android:layout_alignRight="@+id/regBtnInacRegist"
        android:layout_alignEnd="@+id/regBtnInacRegist" />

    <com.andreabaccega.widget.FormEditText
        whatever:emptyErrorString="Ingrese Contraseña"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regTextConfirmPassword"
        android:hint="Repite tu Contraseña"
        android:layout_below="@+id/regTextPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/regBtnInacRegist"
        android:layout_alignEnd="@+id/regBtnInacRegist"/>

    <Button
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:text="Registrarse"
        android:id="@+id/redBtnRegistrarse"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:layout_below="@+id/regTextConfirmPassword"
        android:layout_alignRight="@+id/regTextConfirmPassword"
        android:layout_alignEnd="@+id/regTextConfirmPassword"
        android:onClick="Registrarse"
        android:layout_alignLeft="@+id/regTextConfirmPassword"
        android:layout_alignStart="@+id/regTextConfirmPassword" />

</RelativeLayout>
