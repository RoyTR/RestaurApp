<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="upc.edu.pe.restaurapp.MainActivity"
    android:background="@color/colorBlanco"
    >


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Distrito"
        android:id="@+id/iniBtnDistrito"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBlanco"
        android:textColor="@color/colorGris"
        android:gravity="left|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Comida"
        android:id="@+id/iniBtnTipoComida"
        android:layout_below="@+id/iniBtnDistrito"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBlanco"
        android:textColor="@color/colorGris"
        android:gravity="left|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold"

        />

    <Button
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/iniBtnBuscar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10dp"
        android:background="@color/restaurapptheme_color"
        android:textStyle="bold"
        android:layout_marginRight="1dp"

        android:clickable="false"
        android:onClick="cambiarBuscar"
        />

    <Button
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="Cerca"
        android:id="@+id/iniBtnCerca"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iniBtnBuscar"
        android:layout_toEndOf="@+id/iniBtnBuscar"
        android:textSize="10dp"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:onClick="cambiarCerca"
        />

    <Button
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:id="@+id/iniBtnFavo"
        android:layout_alignTop="@+id/iniBtnCerca"
        android:layout_toLeftOf="@+id/iniBtnRecomen"
        android:layout_toStartOf="@+id/iniBtnRecomen"
        android:textSize="10dp"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:onClick="cambiarFavoritos"
        />

    <Button
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="Recomendaciones"
        android:id="@+id/iniBtnRecomen"
        android:layout_alignTop="@+id/iniBtnFavo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10dp"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:onClick="cambiarRecomendaciones"
        />
</RelativeLayout>
