<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutmainbotonfooter"
    tools:context="upc.edu.pe.restaurapp.MainActivity"

    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    style="@style/_RestaurAppTheme"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/mainbtnfterbuscar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
        android:onClick="cambiarBuscar"
        android:drawableStart="@drawable/buscar"
        android:paddingLeft="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/mainbtnftercerca"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:onClick="cambiarCerca"
        android:drawableStart="@drawable/cerca"
        android:paddingLeft="30dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/mainbtnfterfavoritos"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:onClick="cambiarFavoritos"
        android:drawableStart="@drawable/favoritos"
        android:paddingLeft="30dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/mainbtnfterrecomendaciones"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="@color/colorGrisClaro"
        android:textStyle="bold"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="1dp"
        android:onClick="cambiarRecomendaciones"
        android:drawableStart="@drawable/recomendados"
        android:paddingLeft="25dp"
        />
    </LinearLayout>

</LinearLayout>