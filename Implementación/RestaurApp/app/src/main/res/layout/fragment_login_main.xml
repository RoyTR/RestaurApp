<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/restaurapptheme_color"
    tools:context="upc.edu.pe.restaurapp.LoginMainActivityFragment"
    android:weightSum="1">

    <ImageView
        android:layout_width="197dp"
        android:layout_height="132dp"
        android:id="@+id/imageView2"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/restaurapplogoicon"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:text="Soy Nuevo en RestaurApp"
        android:id="@+id/button2"
        android:onClick="Registro"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape"
        android:textSize="15dp" />

    <Button
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:text="Soy Usuario de RestaurApp"
        android:id="@+id/button3"
        android:onClick="Login"
        android:background="@drawable/shape"
        android:textSize="15dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>